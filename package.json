{
  "name": "exhaustive",
  "version": "1.1.1",
  "description": "Exhaustiveness checking in TypeScript",
  "author": "Luke Morales <lukemorales@live.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lukemorales/exhaustive.git"
  },
  "bugs": {
    "url": "https://github.com/lukemorales/exhaustive/issues"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "module": "./dist/index.mjs",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "default": "./dist/index.mjs"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "run-p build:*",
    "build:tsup": "tsup --dts --minify",
    "changeset": "changeset",
    "clean": "rimraf dist",
    "dev": "pnpm run test:coverage --ui",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint src --ext .ts",
    "lint:eslint:fix": "pnpm run lint:eslint --fix",
    "lint:tsc": "tsc --project tsconfig.json --noEmit",
    "lint:format": "prettier --check ./src",
    "lint:format:fix": "prettier --write ./src",
    "test": "vitest --passWithNoTests",
    "test:ci": "pnpm run test:coverage --run",
    "test:coverage": "pnpm run test --coverage",
    "prerelease": "run-p build test:ci",
    "release": "changeset publish"
  },
  "keywords": [
    "ts-pattern",
    "exhaustive",
    "match",
    "pattern matching",
    "exhaustive check",
    "unreachable",
    "corrupt"
  ],
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.0",
    "@lukemorales/prettier-config": "^0.0.1",
    "@vitest/coverage-c8": "^0.27.3",
    "@vitest/ui": "^0.27.3",
    "eslint": "^8.32.0",
    "eslint-config-lukemorales": "^0.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.3",
    "rimraf": "^4.1.1",
    "tsup": "^6.5.0",
    "typescript": "^4.9.4",
    "vitest": "^0.27.3"
  },
  "eslintConfig": {
    "extends": [
      "lukemorales",
      "lukemorales/jest"
    ],
    "rules": {
      "@typescript-eslint/no-explicit-any": "off"
    }
  },
  "prettier": "@lukemorales/prettier-config"
}
